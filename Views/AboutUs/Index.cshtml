@model IEnumerable<rental.Models.AboutU>

@{
    ViewData["Title"] = "About Us";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="container-fluid">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="row mb-4">
        <div class="col">
            <a asp-action="Create" class="btn btn-primary btn-lg">Create New</a>
        </div>
    </div>

    <!-- About Us Cards -->
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="@Url.Content("~/images/" + item.Imagepath)" class="card-img-top" alt="Image for @item.Text" style="height: 180px; object-fit: cover; border-radius: 20%;" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Text</h5>
                        <p class="card-text">
                            <strong>Image Path:</strong> @item.Imagepath
                        </p>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .container-fluid {
        margin-top: 20px;
    }

    .btn-lg {
        padding: 0.75rem 1.25rem;
        font-size: 1.25rem;
        line-height: 1.5;
    }

    .card {
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        overflow: hidden;
    }

    .card-img-top {
        border-bottom: 1px solid #dee2e6;
    }

    .card-body {
        padding: 1.25rem;
    }

    .card-title {
        font-size: 1.25rem;
        margin-bottom: 0.75rem;
    }

    .card-text {
        font-size: 0.875rem;
        margin-bottom: 1.25rem;
    }

    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.75rem;
        line-height: 1.5;
        margin-right: 0.5rem;
    }
</style>
