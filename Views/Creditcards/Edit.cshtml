@model rental.Models.Creditcard

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout1.cshtml"; // Ensure the layout is set if needed
}

<div class="container mt-4">
    <h1 class="mb-4">Edit Credit Card</h1>

    <h4 class="mb-3">Update Credit Card Details</h4>
    <hr />

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Name" class="form-label">Card Holder Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter card holder's name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Cvv" class="form-label">CVV</label>
                    <input asp-for="Cvv" type="text" class="form-control" placeholder="Enter CVV" />
                    <span asp-validation-for="Cvv" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Cardnumber" class="form-label">Card Number</label>
                    <input asp-for="Cardnumber" type="text" class="form-control" placeholder="Enter card number" />
                    <span asp-validation-for="Cardnumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Expiredate" class="form-label">Expiration Date</label>
                    <input asp-for="Expiredate" type="date" class="form-control" />
                    <span asp-validation-for="Expiredate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Balance" class="form-label">Balance</label>
                    <input asp-for="Balance" type="number" step="0.01" class="form-control" placeholder="Enter balance" />
                    <span asp-validation-for="Balance" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter email address" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Useracountfk" class="form-label">User Account</label>
                    <select asp-for="Useracountfk" class="form-control" asp-items="ViewBag.Useracountfk"></select>
                    <span asp-validation-for="Useracountfk" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Save" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
