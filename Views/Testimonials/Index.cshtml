@model IEnumerable<rental.Models.Testimonial>

@{
    ViewData["Title"] = "Testimonials";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="container-fluid">
    <h1 class="mb-4">@ViewData["Title"]</h1>


    <!-- Testimonials Cards -->
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@Url.Content("~/img/" + item.ImagePath)" class="card-img-top" alt="@item.UserName's image" style="height: 180px; object-fit: cover;" />
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/300x180" class="card-img-top" alt="No Image Available" style="height: 180px; object-fit: cover;" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.UserName</h5>
                      
                        <p class="card-text">@item.Message</p>
                        <p class="card-text">
                            <small class="text-muted">Status: @item.Status</small><br />
                            <small class="text-muted">
                                Date: @(item.CreatDate.HasValue ? item.CreatDate.Value.ToShortDateString() : "N/A")
                            </small>
                        </p>
                        <a asp-action="Edit" asp-route-id="@item.CommentId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.CommentId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.CommentId" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .container-fluid {
        margin-top: 20px;
    }

    .btn-lg {
        padding: 0.75rem 1.25rem;
        font-size: 1.25rem;
        line-height: 1.5;
    }

    .card {
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        overflow: hidden;
    }

    .card-img-top {
        width: 100%;
        height: 180px;
        object-fit: cover;
        border-bottom: 1px solid #dee2e6;
    }

    .card-body {
        padding: 1.25rem;
    }

    .card-title {
        font-size: 1.25rem;
        margin-bottom: 0.75rem;
    }

    .card-text {
        font-size: 0.875rem;
        margin-bottom: 1.25rem;
    }

    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
        line-height: 1.5;
        margin-right: 0.5rem;
    }

    .text-muted {
        color: #6c757d;
    }
</style>
