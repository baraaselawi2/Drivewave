@model rental.Models.Testimonial

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-4">Create Testimonial</h1>

    <h4 class="mb-3">Testimonial Details</h4>
    <hr />

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-group">
                    <label asp-for="UserName" class="form-label"></label>
                    <input asp-for="UserName" class="form-control" placeholder="Enter username" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Message" class="form-label"></label>
                    <textarea asp-for="Message" class="form-control" rows="3" placeholder="Enter your message"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Status" class="form-label"></label>
                    <input asp-for="Status" class="form-control" placeholder="Enter status" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CreatDate" class="form-label"></label>
                    <input asp-for="CreatDate" class="form-control" type="date" />
                    <span asp-validation-for="CreatDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="UserIdfk" class="form-label"></label>
                    <select asp-for="UserIdfk" class="form-control" asp-items="ViewBag.UserIdfk">
                        <option value="">Select a user</option>
                    </select>
                    <span asp-validation-for="UserIdfk" class="text-danger"></span>
                </div>

                <!-- Image Upload Field -->
                <div class="form-group">
                    <label asp-for="ImageFile" class="form-label">Upload Image</label>
                    <input asp-for="ImageFile" type="file" class="form-control" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Testimonail" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
