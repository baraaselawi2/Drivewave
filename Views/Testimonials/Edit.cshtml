@model rental.Models.Testimonial

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-4">Edit Testimonial</h1>

    <h4 class="mb-3">Update Testimonial Details</h4>
    <hr />

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input type="hidden" asp-for="CommentId" />

                <div class="form-group">
                    <label asp-for="UserName" class="form-label">User Name</label>
                    <input asp-for="UserName" class="form-control" placeholder="Enter user name" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Message" class="form-label">Message</label>
                    <textarea asp-for="Message" class="form-control" placeholder="Enter message" rows="4"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Status" class="form-label">Status</label>
                    <input asp-for="Status" class="form-control" placeholder="Enter status" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CreatDate" class="form-label">Creation Date</label>
                    <input asp-for="CreatDate" type="date" class="form-control" />
                    <span asp-validation-for="CreatDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="UserIdfk" class="form-label">User</label>
                    <select asp-for="UserIdfk" class="form-control" asp-items="ViewBag.UserIdfk"></select>
                    <span asp-validation-for="UserIdfk" class="text-danger"></span>
                </div>

                <!-- Display current image if available -->
                <div class="form-group">
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <div>
                            <label class="form-label">Current Image</label>
                            <img src="@Url.Content("~/wwwroot/img/" + Model.ImagePath)" alt="Current Image" class="img-thumbnail" style="max-width: 200px;" />
                        </div>
                    }
                </div>

                <!-- Image Upload Field -->
                <div class="form-group">
                    <label asp-for="ImageFile" class="form-label">Upload New Image</label>
                    <input asp-for="ImageFile" type="file" class="form-control" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Save" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
