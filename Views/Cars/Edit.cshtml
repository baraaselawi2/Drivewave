@model rental.Models.Car

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-4">Edit Car</h1>

    <h4 class="mb-3">Update Car Details</h4>
    <hr />

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input type="hidden" asp-for="CarId" />

                <div class="form-group">
                    <label asp-for="CarNumber" class="form-label">Car Number</label>
                    <input asp-for="CarNumber" class="form-control" placeholder="Enter car number" />
                    <span asp-validation-for="CarNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CarName" class="form-label">Car Name</label>
                    <input asp-for="CarName" class="form-control" placeholder="Enter car name" />
                    <span asp-validation-for="CarName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CarColor" class="form-label">Car Color</label>
                    <input asp-for="CarColor" class="form-control" placeholder="Enter car color" />
                    <span asp-validation-for="CarColor" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CarSet" class="form-label">Car Set</label>
                    <input asp-for="CarSet" class="form-control" placeholder="Enter car set" />
                    <span asp-validation-for="CarSet" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CarValue2" class="form-label">Car Value 2</label>
                    <input asp-for="CarValue2" class="form-control" placeholder="Enter car value 2" />
                    <span asp-validation-for="CarValue2" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CarValue3" class="form-label">Car Value 3</label>
                    <input asp-for="CarValue3" class="form-control" placeholder="Enter car value 3" />
                    <span asp-validation-for="CarValue3" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="ImageFile" class="form-label">Upload New Image</label>
                    <input type="file" id="ImageFile" name="ImageFile" class="form-control" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Save" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
