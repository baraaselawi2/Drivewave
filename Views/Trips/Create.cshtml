@model rental.Models.Trip

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-4">Create Trip</h1>

    <h4 class="mb-3">Trip Details</h4>
    <hr />

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-group">
                    <label asp-for="StartTime" class="form-label"></label>
                    <input asp-for="StartTime" class="form-control" type="datetime-local" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EndTime" class="form-label"></label>
                    <input asp-for="EndTime" class="form-control" type="datetime-local" />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LocationPickup" class="form-label"></label>
                    <input asp-for="LocationPickup" class="form-control" placeholder="Enter pickup location" />
                    <span asp-validation-for="LocationPickup" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LocationDrop" class="form-label"></label>
                    <input asp-for="LocationDrop" class="form-control" placeholder="Enter drop location" />
                    <span asp-validation-for="LocationDrop" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Status" class="form-label"></label>
                    <input asp-for="Status" class="form-control" placeholder="Enter drop location" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="UserIdfk" class="form-label"></label>
                    <select asp-for="UserIdfk" class="form-control" asp-items="ViewBag.UserIdfk">
                        <option value="">Select User</option>
                    </select>
                    <span asp-validation-for="UserIdfk" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CarIdfk" class="form-label"></label>
                    <select asp-for="CarIdfk" class="form-control" asp-items="ViewBag.CarIdfk">
                        <option value="">Select Car</option>
                    </select>
                    <span asp-validation-for="CarIdfk" class="text-danger"></span>
                </div>


                <div class="form-group mt-4">
                    <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
