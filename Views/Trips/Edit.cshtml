@model rental.Models.Trip

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-4">Edit Trip</h1>

    <h4 class="mb-3">Update Trip Details</h4>
    <hr />

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input type="hidden" asp-for="TripId" />
                <div class="form-group">
                    <label asp-for="Status" class="form-label">Start Time</label>
                    <input asp-for="Status" type="datetime-local" class="form-control" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="StartTime" class="form-label">Start Time</label>
                    <input asp-for="StartTime" type="datetime-local" class="form-control" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EndTime" class="form-label">End Time</label>
                    <input asp-for="EndTime" type="datetime-local" class="form-control" />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LocationPickup" class="form-label">Pickup Location</label>
                    <input asp-for="LocationPickup" class="form-control" placeholder="Enter pickup location" />
                    <span asp-validation-for="LocationPickup" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LocationDrop" class="form-label">Drop Location</label>
                    <input asp-for="LocationDrop" class="form-control" placeholder="Enter drop location" />
                    <span asp-validation-for="LocationDrop" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="UserIdfk" class="form-label">User</label>
                    <select asp-for="UserIdfk" class="form-control" asp-items="ViewBag.UserIdfk"></select>
                    <span asp-validation-for="UserIdfk" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CarIdfk" class="form-label">Car</label>
                    <select asp-for="CarIdfk" class="form-control" asp-items="ViewBag.CarIdfk"></select>
                    <span asp-validation-for="CarIdfk" class="text-danger"></span>
                </div>
         

                <div class="form-group mt-4">
                    <input type="submit" value="Save" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
