        <div class="container-fluid nav-bar sticky-top px-0 px-lg-4 py-2 py-lg-0">
            <div class="container">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <a href="" class="navbar-brand p-0">
                        <h1 class="display-6 text-primary"><i class="fas fa-car-alt me-3"></i>DriveWave</h1>
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                        <span class="fa fa-bars"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <div class="navbar-nav mx-auto py-0">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                            <a class="nav-link" href="@Url.Action("Car", "Home")">Car</a>
                            <a class="nav-link" href="@Url.Action("Service", "Home")">Service</a>
                            <a class="nav-link" href="@Url.Action("Team", "Home")">Team</a>
                            <a class="nav-link" href="@Url.Action("Testimonial", "Home")">Testimonial</a>
                            <a class="nav-link" href="@Url.Action("Contact", "Home")">Contact</a>
                            <a class="nav-link" href="@Url.Action("About", "Home")">About</a>
                            <a class="nav-link" href="@Url.Action("UserProfiles", "Home")">Profile</a>
                            <a class="nav-link" href="@Url.Action("Creditcard", "Home")">Payment</a>
                        </div>

                        <!-- Chatbot Icon -->
                        <div class="d-flex align-items-center ms-3">
                            <a href="@Url.Action("Index", "Chatbot")" id="chatbotIcon" class="nav-link">
                                <i class="fas fa-robot"></i> <!-- Font Awesome robot icon -->
                            </a>
                        </div>

                        <form asp-controller="LogReg" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger rounded-pill py-2 px-4">Logout</button>
                        </form>
                </nav>
            </div>
        </div>
    </div>
    <!-- Navbar & Hero End -->

    <div> @RenderBody()</div>
  
    <!-- Footer Start -->
    <div class="container-fluid footer py-5 wow fadeIn" data-wow-delay="0.2s">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-md-6 col-lg-6 col-xl-3">
                    <div class="footer-item d-flex flex-column">
                        <div class="footer-item">
                            <h4 class="text-white mb-4">About Us</h4>
                            <p class="mb-3">
                                    Welcome to DriveWave, where comfort and reliability meet. Established in 2024, we offer a range of well-maintained vehicles for all your transportation needs. Our professional drivers are dedicated to providing timely and courteous service. With a focus on safety and affordability, we aim to make every journey seamless. Choose us for a dependable and enjoyable travel experience.
                            </p>
                        </div>
                      
