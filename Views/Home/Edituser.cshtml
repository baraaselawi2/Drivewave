@model rental.Models.UserAccount

@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5" style="background-color: #f8f9fa;">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-primary rounded-lg bg-white">
                <div class="card-body p-4">
                    <h2 class="text-center text-primary fw-bold mb-4">Edit Profile</h2>
                    <form asp-action="Edituser" method="post" enctype="multipart/form-data">
                        @* Display validation errors *@
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <input type="hidden" asp-for="UserId" />

                        <div class="form-group mb-3">
                            <label asp-for="UserName" class="form-label fw-bold">Username</label>
                            <input asp-for="UserName" class="form-control border-primary" placeholder="Enter your username" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Phone" class="form-label fw-bold">Phone</label>
                            <input asp-for="Phone" class="form-control border-primary" placeholder="Enter your phone number" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label fw-bold">Email</label>
                            <input asp-for="Email" type="email" class="form-control border-primary" placeholder="Enter your email address" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="City" class="form-label fw-bold">City</label>
                            <input asp-for="City" class="form-control border-primary" placeholder="Enter your city" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Gender" class="form-label fw-bold">Gender</label>
                            <select asp-for="Gender" class="form-control border-primary">
                                <option value="">Select your gender</option>
                                <option value="Male">M</option>
                                <option value="Female">F</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="ImageFile" class="form-label fw-bold">Profile Image</label>
                            <input asp-for="ImageFile" type="file" class="form-control border-primary" />
                            @if (!string.IsNullOrEmpty(Model.UserImage))
                            {
                                <div class="mt-2 text-center">
                                    <img src="@Url.Content("~/img/" + Model.UserImage)" class="img-thumbnail border border-primary" alt="Current Image" style="height: 150px; object-fit: cover;" />
                                </div>
                            }
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center">
                            <input type="submit" value="Save Changes" class="btn btn-primary btn-lg px-5 shadow-sm" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="mt-4 text-center">
                <a asp-action="UserProfiles" class="btn btn-secondary px-4 shadow-sm">Back to Profile</a>
            </div>
        </div>
    </div>
</div>
